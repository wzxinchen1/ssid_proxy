#!/bin/sh

iptables -t nat -A PREROUTING -i br-game1 -p udp -j REDIRECT --to-port 10000
iptables -t nat -A PREROUTING -i br-game1 -p tcp -j REDIRECT --to-port 10000

iptables -t nat -A PREROUTING -i br-game2 -p udp -j REDIRECT --to-port 10000
iptables -t nat -A PREROUTING -i br-game2 -p tcp -j REDIRECT --to-port 10000

iptables -t nat -A PREROUTING -i br-game3 -p udp -j REDIRECT --to-port 10000
iptables -t nat -A PREROUTING -i br-game3 -p tcp -j REDIRECT --to-port 10000